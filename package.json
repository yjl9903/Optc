{
  "name": "optc",
  "version": "0.1.0",
  "description": "An easy way to write TypeScript cli script application.",
  "keywords": [
    "cli"
  ],
  "homepage": "https://github.com/yjl9903/optc#readme",
  "bugs": {
    "url": "https://github.com/yjl9903/optc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/optc.git"
  },
  "license": "MIT",
  "author": "XLor",
  "sideEffects": false,
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./global": {
      "types": "./global.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "optc": "./cli.mjs"
  },
  "files": [
    "dist",
    "*.mjs"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "format": "prettier --write global.d.ts src/**/*.ts test/**/*.ts examples/*.ts",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "preversion": "pnpm build"
  },
  "dependencies": {
    "cac": "^6.7.12",
    "debug": "^4.3.4",
    "jiti": "^1.13.0",
    "kolorist": "^1.5.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/node": "^17.0.22",
    "bumpp": "^7.1.1",
    "prettier": "^2.6.0",
    "typescript": "^4.6.2",
    "unbuild": "^0.7.0",
    "vite": "^2.8.6",
    "vitest": "^0.7.9"
  },
  "packageManager": "pnpm@6.32.9"
}
