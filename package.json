{
  "name": "optc",
  "version": "0.3.8",
  "description": "An easy way to write TypeScript cli script application.",
  "keywords": [
    "cli"
  ],
  "homepage": "https://github.com/yjl9903/optc#readme",
  "bugs": {
    "url": "https://github.com/yjl9903/optc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/optc.git"
  },
  "license": "MIT",
  "author": "XLor",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./globals": {
      "types": "./globals.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "optc": "./cli.mjs"
  },
  "files": [
    "dist",
    "*.mjs",
    "*.d.ts"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "format": "prettier --write globals.d.ts src/**/*.ts test/**/*.ts examples/*.ts",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "preversion": "pnpm build"
  },
  "dependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.6.1",
    "axios": "^0.27.2",
    "cac": "^6.7.14",
    "debug": "^4.3.4",
    "fs-extra": "^10.1.0",
    "globby": "^13.1.2",
    "jiti": "^1.16.0",
    "kolorist": "^1.6.0",
    "magic-regexp": "^0.5.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "bumpp": "^8.2.1",
    "prettier": "latest",
    "typescript": "^4.8.3",
    "unbuild": "^0.8.11",
    "vite": "^3.1.3",
    "vitest": "^0.23.4"
  },
  "packageManager": "pnpm@7.12.2",
  "engines": {
    "node": ">=v16.17.0"
  }
}
