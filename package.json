{
  "name": "optc",
  "version": "0.2.2",
  "description": "An easy way to write TypeScript cli script application.",
  "keywords": [
    "cli"
  ],
  "homepage": "https://github.com/yjl9903/optc#readme",
  "bugs": {
    "url": "https://github.com/yjl9903/optc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/optc.git"
  },
  "license": "MIT",
  "author": "XLor",
  "sideEffects": false,
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./globals": {
      "types": "./globals.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "optc": "./cli.mjs"
  },
  "files": [
    "dist",
    "*.mjs",
    "*.d.ts"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "format": "prettier --write globals.d.ts src/**/*.ts test/**/*.ts examples/*.ts",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "preversion": "pnpm build"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "cac": "^6.7.12",
    "debug": "^4.3.4",
    "fs-extra": "^10.1.0",
    "globby": "^13.1.2",
    "jiti": "^1.13.0",
    "kolorist": "^1.5.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.42",
    "bumpp": "^7.1.1",
    "prettier": "^2.7.0",
    "typescript": "^4.7.3",
    "unbuild": "^0.7.4",
    "vite": "^2.9.12",
    "vitest": "^0.14.2"
  },
  "packageManager": "pnpm@7.2.1",
  "engines": {
    "node": ">=16.0.0"
  }
}
