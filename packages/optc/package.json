{
  "name": "optc",
  "version": "0.6.4",
  "description": "An easy way to write TypeScript cli script application.",
  "keywords": [
    "optc",
    "breadc",
    "cli",
    "script",
    "TypeScript"
  ],
  "homepage": "https://github.com/yjl9903/optc#readme",
  "bugs": {
    "url": "https://github.com/yjl9903/optc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/optc.git"
  },
  "license": "MIT",
  "author": "XLor",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./globals": {
      "types": "./globals.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "optc": "./cli.mjs"
  },
  "files": [
    "dist",
    "*.mjs",
    "*.d.ts"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "format": "prettier --write globals.d.ts src/**/*.ts test/**/*.ts",
    "test": "OPTC_CACHE=false OPTC_ROOT=./test/space vitest",
    "test:ci": "OPTC_CACHE=false OPTC_ROOT=./test/space vitest --run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@babel/core": "^7.23.7",
    "@babel/plugin-transform-typescript": "^7.23.6",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "axios": "^1.6.4",
    "breadc": "^0.9.7",
    "debug": "^4.3.4",
    "find-up": "^7.0.0",
    "fs-extra": "^11.2.0",
    "globby": "^14.0.0",
    "jiti": "^1.21.0",
    "kolorist": "^1.8.0",
    "scule": "^1.1.1"
  },
  "devDependencies": {
    "@babel/types": "^7.23.6",
    "@types/babel__core": "^7.20.5",
    "@types/debug": "^4.1.12"
  },
  "packageManager": "pnpm@8.14.0",
  "engines": {
    "node": ">=v16.0.0"
  }
}
